<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/left_side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_toLeftOf="@id/anchor"
        android:background="@drawable/rounded_corners_bg"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/v_type_transmission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="HELLO" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_layout">

            <LinearLayout
                android:id="@+id/linearLayout_dummy1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:orientation="horizontal"/>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/vehicleImage"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_dummy2"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:orientation="horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_layout"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/linearLayout_dummy0"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/linearLayout_dummy6"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vehicle_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="Toyota Corolla 2015"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_dummy78"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:orientation="horizontal" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"

        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/anchor">

        <LinearLayout
            android:id="@+id/right_side_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/linearLayout_dummy8"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/passengers"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/passengers"
                    android:clickable="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_dummy9"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/passenger_count"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:clickable="true"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:orientation="horizontal" />


            <LinearLayout
                android:id="@+id/linearLayout_dummy13"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/suitcase"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/suitcase"
                    android:clickable="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_dummy14"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/suitcase_count"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:clickable="true"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/right_side_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/right_side_row1"
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/linearLayout_dummy20"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/airbags"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/airbag"
                    android:clickable="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_dummy21"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/airbag_count"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:clickable="true"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_dummy17"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/linearLayout_dummy18"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/doors_count"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/cardoors"
                    android:clickable="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_dummy19"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/door_count"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:clickable="true"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_side_row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/right_side_row2"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/getCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:textSize="12dp"
                    android:text="Charge"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".0"
                android:orientation="horizontal"/>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/total_vehicle_charge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:visibility="visible"

                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_side_row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/right_side_row3"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".01"
                android:orientation="horizontal"/>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".7"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="#000"
                    android:textSize="12dp"
                    android:text="Checkout"
                    android:textColor="#FFFFFF"

                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>